  </div>
  <div class="field">
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <% menu_items = [['Male', 'Male'],['Female', 'Female']] %>
    <%= f.select :gender, menu_items %>
  </div>
  <div class="field">
    <%= f.label :inseam %><br />
    <% menu_items = [[29, 29],[30, 30],[31, 31],[32, 32],[33, 33],[34, 34],[35, 35],[36, 36]] %>
    <%= f.select :inseam, menu_items %>
  </div>
  <div class="field">
    <%= f.label :waist %><br />
    <% menu_items = [[28, 28],[29, 29],[30, 30],[31, 31],[32, 32],[33, 33],[34, 34],[35, 35],[36, 36],[37, 37],[38, 38],[39, 39],[40, 40],[41, 41],[42, 42],[43, 43],[44, 44]] %>
    <%= f.select :waist, menu_items %>
  </div>
  <div class="field">
    <%= f.label :rise %><br />
    <%= f.number_field :rise %>
  </div>
  <div class="field">
    <%= f.label :hips %><br />
    <% menu_items = [[26, 26],[27, 27],[28, 28],[29, 29],[30, 30],[31, 31],[32, 32],[33, 33],[34, 34],[35, 35],[36, 36],[37, 37]] %>
